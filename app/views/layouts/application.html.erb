<!DOCTYPE html>
<html>
  <head>
    <title>FacebookLite</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <% if logged_in? %>
      <script type="text/javascript">
        window.currentUser = {id: <%= current_user.id %>}
      </script>
    <% end %>

    <%= yield %>
  </body>
</html>
